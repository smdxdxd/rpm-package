<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.iwhalecloud</groupId>
  <artifactId>rpm-package</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>rpm-package</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1.4</version>
        <executions>
          <execution>
            <phase>none</phase>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <name>jdk</name>
          <version>1.8</version>
          <needarch>x86_64</needarch>
          <license>xiaozhch5</license>
          <group>xiaozhch5</group>
          <description>build rpm from any files/dirs</description>
          <autoRequires>no</autoRequires>
          <prefix>/</prefix>
          <mappings>
            <mapping>
              <directory>/home/xiaozhch5/example/var</directory>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>/data/bigdata/rpm-package/src/main/resources/example/var</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/home/xiaozhch5/example/var</directory>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>/data/bigdata/rpm-package/src/main/resources/example/usr</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/home/xiaozhch5/example/log</directory>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>/data/bigdata/rpm-package/src/main/resources/example/log</location>
                </source>
              </sources>
            </mapping>
          </mappings>
          <prepareScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </prepareScriptlet>
          <preinstallScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </preinstallScriptlet>
          <installScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </installScriptlet>
          <postinstallScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </postinstallScriptlet>
          <preremoveScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </preremoveScriptlet>
          <postremoveScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </postremoveScriptlet>
          <verifyScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </verifyScriptlet>
          <cleanScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </cleanScriptlet>
          <pretransScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </pretransScriptlet>
          <posttransScriptlet>
            <scriptFile></scriptFile>
            <fileEncoding>UTF-8</fileEncoding>
          </posttransScriptlet>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
